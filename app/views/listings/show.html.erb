<div class="ibox">
  <div class="ibox-title">
    <span class="pull-left">
      <h3>รายละเอียดสินค้า</h3>
    </span>
    <span class="pull-right">
      <%= link_to "Edit", send("edit_#{params[:type].underscore}_path", @listing), class: 'btn btn-default btn-xs' %>
    </span>
    <div class="clearfix"></div>
  </div>
  <div class="ibox-content">
    <div class="row mg-b-20">
      <div class="col-md-12">
        <h4><%= @listing.title %></h4>
      </div>
    </div>
    <div class="row">
      <!-- Photo -->
      <div class="col-md-3">
        <% @listing.photos.each do |photo| %>
          <%= image_tag photo.image.url(:medium), class: 'img-responsive' %>
        <% end %>
      </div>

      <!-- Details -->
      <div class="col-md-6">
        <h4><%= @listing.type.underscore.humanize.titleize %></h4>
        <%= render "listings/details/#{@type.underscore}", listing: @listing %>
      </div>

      <!-- Seller -->
      <div class="col-md-3">
        <div class="text-center">
          <%= image_tag @listing.seller.avatar.url(:thumb), class: 'img-circle' %>
        </div>
        <p>email: <%= @listing.seller.email %></p>
      </div>
    </div>
  </div>
</div>